<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:id="lobbiesMenuPane" xmlns="http://javafx.com/javafx/21" stylesheets="/style.css">
    <VBox fx:id="buttonsBox" alignment="CENTER">
        <Label fx:id="ownNicknameLabel" styleClass="titleScreenLabel">
            <font>
                <Font name="Bell MT" size="14.0"/>
            </font>
        </Label>
        <Button fx:id="createGameButton" styleClass="rectangularButton" mnemonicParsing="false" text="Create game">
            <font>
                <Font name="Bell MT" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="nicknameButton" styleClass="rectangularButton" mnemonicParsing="false" text="Change nickname">
            <font>
                <Font name="Bell MT" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="backToTitleScreenButton" styleClass="rectangularButton" mnemonicParsing="false"
                text="Back to title screen">
            <font>
                <Font name="Bell MT" size="14.0"/>
            </font>
        </Button>
    </VBox>

    <ScrollPane fx:id="lobbiesPane" layoutX="400.0" layoutY="30.0" prefHeight="800.0" prefWidth="800.0">
        <VBox fx:id="lobbiesList" minHeight="0.0" minWidth="0.0"/>
    </ScrollPane>

    <VBox fx:id="lobbyCreationPopupBox" visible="false" alignment="CENTER"
          style="-fx-background-image: url('/images/medieval_popup.png'); -fx-background-repeat: no-repeat;
          -fx-background-size: stretch; -fx-border-width: 1; -fx-spacing: 10;">
        <Label fx:id="playersNumberPrompt" styleClass="popupText" alignment="CENTER"
               text="Insert the maximum number of players for the game:">
            <font>
                <Font name="Bell MT" size="30.0"/>
            </font>
        </Label>
        <ComboBox fx:id="maxPlayersSelector" prefWidth="150.0"/>
        <Button fx:id="confirmLobbyCreationButton" styleClass="rectangularButton" mnemonicParsing="false"
                prefHeight="27.0" prefWidth="141.0" text="OK">
            <font>
                <Font name="Bell MT" size="14.0"/>
            </font>
        </Button>
    </VBox>

    <VBox fx:id="changeNicknamePopupBox" visible="false" alignment="CENTER"
          style="-fx-background-image: url('/images/medieval_popup.png'); -fx-background-repeat: no-repeat;
          -fx-background-size: stretch; -fx-border-width: 1; -fx-spacing: 10;">
        <Label fx:id="nicknamePrompt" styleClass="popupText" alignment="CENTER"
               text="Choose a new nickname [max 10 chars]:">
            <font>
                <Font name="Bell MT" size="30.0"/>
            </font>
        </Label>
        <TextField fx:id="nicknameField" promptText="nickname"/>
        <Button fx:id="confirmNicknameChangeButton" styleClass="rectangularButton" mnemonicParsing="false"
                prefHeight="27.0" prefWidth="141.0" text="OK">
            <font>
                <Font name="Bell MT" size="14.0"/>
            </font>
        </Button>
    </VBox>
</AnchorPane>
