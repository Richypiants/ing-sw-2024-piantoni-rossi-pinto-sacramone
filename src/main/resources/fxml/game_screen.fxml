<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:id="gameScreenPane" stylesheets="/style.css">

    <Button fx:id="scoreboardButton" styleClass="roundButton" mnemonicParsing="false"/>
    <Button fx:id="chatButton" styleClass="roundButton" mnemonicParsing="false"/>
    <Button fx:id="leaveButton" styleClass="roundButton" mnemonicParsing="false"/>

    <AnchorPane fx:id="scoreboardPane" visible="false"/>

    <AnchorPane fx:id="decksAndVisibleCardsPane">
        <Label fx:id="resourcesLabel" alignment="CENTER"
               text="Resource cards">
            <font>
                <Font name="Bell MT" size="24.0"/>
            </font>
        </Label>
        <HBox fx:id="resourceHBox" alignment="CENTER" spacing="10">
            <!--> <ImageView fx:id="resourceDeck"/> <-->
        </HBox>
        <Label fx:id="goldsLabel" alignment="CENTER"
               text="Gold cards">
            <font>
                <Font name="Bell MT" size="24.0"/>
            </font>
        </Label>
        <HBox fx:id="goldHBox" alignment="CENTER" spacing="10">
            <!--> <ImageView fx:id="goldDeck"/> <-->
        </HBox>
        <Label fx:id="commonObjectivesLabel" alignment="CENTER"
               text="Common Objectives">
            <font>
                <Font name="Bell MT" size="24.0"/>
            </font>
        </Label>
        <HBox fx:id="objectiveHBox" alignment="CENTER" spacing="10">
            <!--> <ImageView fx:id="secretObjective"/> <-->
        </HBox>
        <Label fx:id="secretObjectiveLabel" alignment="CENTER"
               text="Secret Objective">
            <font>
                <Font name="Bell MT" size="24.0"/>
            </font>
        </Label>
    </AnchorPane>

    <HBox fx:id="opponentsFieldsPane">
    </HBox>

    <AnchorPane fx:id="ownFieldPane">
        <VBox fx:id="statsBox" alignment="CENTER"/>
        <ScrollPane fx:id="ownFieldScrollPane"/>
        <Button fx:id="zoomedOwnFieldButton" mnemonicParsing="false" text="[]"/>
        <Button fx:id="centerOwnFieldButton" mnemonicParsing="false" text="+"/>
    </AnchorPane>

    <HBox fx:id="handPane">

    </HBox>

    <AnchorPane fx:id="chatPane" visible="false">
        <VBox fx:id="chatBox" alignment="CENTER" spacing="5">
            <ScrollPane fx:id="chatScrollPane" prefHeight="500.0" prefWidth="350.0">
                <VBox fx:id="messagesBox" spacing="5"/>
            </ScrollPane>
            <HBox alignment="CENTER">
                <Label fx:id="to" prefHeight="10.0" prefWidth="100.0" text="Send to:" textFill="#000000">
                    <font>
                        <Font name="Bell MT" size="24.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="receiverSelector" layoutX="225.0" layoutY="188.0" prefWidth="150.0"
                          promptText="everyone"/>
            </HBox>
            <HBox fx:id="sendControls" alignment="CENTER" spacing="10">
                <TextField fx:id="messageText" prefHeight="10.0" prefWidth="100.0"
                           promptText="Scrivi qui il tuo messaggio...">
                    <font>
                        <Font name="Bell MT" size="16.0"/>
                    </font>
                </TextField>
                <Button fx:id="sendButton" mnemonicParsing="false"/>
            </HBox>
        </VBox>
    </AnchorPane>

    <VBox fx:id="awaitingStateMessageBox" styleClass="awaitingStateMessageBox" visible="false">
        <Label fx:id="awaitingPrompt" alignment="CENTER"
               text="[GAME PAUSED] Awaiting for reconnection of other players...">
            <font>
                <Font name="Bell MT" size="30.0"/>
            </font>
        </Label>
    </VBox>

    <VBox fx:id="leaderboardVBox" styleClass="lobbyScreenPopupBox" visible="false">
        <Label fx:id="leaderboardLabel" styleClass="titleScreenLabel" alignment="CENTER"
               text="LEADERBOARD">
            <font>
                <Font name="Bell MT" size="30.0"/>
            </font>
        </Label>

        <Label fx:id="winningPlayerLabel" styleClass="titleScreenLabel" alignment="CENTER">
            <font>
                <Font name="Bell MT" size="30.0"/>
            </font>
        </Label>

    </VBox>
</AnchorPane>
